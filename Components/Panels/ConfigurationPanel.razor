<MudGrid>
    <!-- Tcp Port -->
    <MudItem xs="6">
        <MudNumericField @bind-Value="_tcpPort" Label="TCP端口" />
    </MudItem>

    <!-- Http Port -->
    <MudItem xs="6">
        <MudNumericField @bind-Value="_httpPort" Label="HTTP端口" />
    </MudItem>
    
    <!-- Enable Authentication -->
    <MudItem xs="12">
        <MudSwitch T="bool" @bind-Value="_enableAuthentication" Label="启用身份验证" Color="Color.Primary"/>
    </MudItem>
    
    <!-- Username -->
    <MudItem xs="6">
        <MudTextField @bind-Value="_username" Label="用户名" Disabled="@(!IsAuthEnabled)" />
    </MudItem>
    
    <!-- Password -->
    <MudItem xs="6">
        <MudTextField @bind-Value="_password" Label="密码" InputType="@(_showPassword ? InputType.Text : InputType.Password)" Disabled="@(!IsAuthEnabled)" Adornment="Adornment.End" AdornmentIcon="@(_showPassword ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)" OnAdornmentClick="TogglePasswordVisibility" />
    </MudItem>

    <!-- Hide Config Panel At Startup -->
    <MudItem xs="12">
        <MudSwitch T="bool" @bind-Value="_hidePanel" Label="隐藏配置面板" Color="Color.Primary"/>
    </MudItem>

    <!-- Reset/Restart -->
    <MudItem xs="6">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Disabled="!IsDirty" OnClick="Reset">重置更改</MudButton>
    </MudItem>
    <MudItem xs="6">
        <MudButton Variant="Variant.Filled" Color="Color.Error" FullWidth="true" Disabled="!IsDirty"  OnClick="SaveAndRestart">保存并重启</MudButton>
    </MudItem>
</MudGrid>